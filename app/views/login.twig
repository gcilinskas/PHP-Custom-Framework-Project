{% extends "templates/app.twig" %}

{% block content %}
<form action="/login" method="POST">

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <h1 class="text-center">Login</h1>
        </div>
         <div class="modal-body">
         <div class="row is-invalid">
         <p class="">{{errors.database}}</p>
         </div>
             <div class="form-group">
                 <input type="text" class="form-control input-lg {{ errors.email ? 'is-invalid' : '' }}" name="email" placeholder="Email" value="{{old.email}}" />
             </div>

             {% if errors.email %}
             <div class="invalid-feedback">
                {{ errors.email | first }}
             </div>
             {% endif %}
             

             <div class="form-group">
                 <input type="password" class="form-control input-lg  {{ errors.password ? 'is-invalid' : '' }}" name="password" placeholder="Password" value="{{old.password}}" />
             </div>

             {% if errors.password %}
             <div class="invalid-feedback">
                {{ errors.password | first }}
             </div>
             {% endif %}

             <div class="form-group">
                 <input type="submit" class="btn btn-block btn-lg btn-primary" value="Login"/>
                 <p class="pull-right">Don't have an account?</p>
                 <p><a href="/register">Register Here</a></p>


             </div>
         </div>
    </div>
 </div>

 </form>

{% endblock %}